{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "#repositories/*": [
        "./app/repositories/*"
      ],
      "#use_cases/*": [
        "./app/use_cases/*"
      ],
      "#controllers/*": [
        "./app/controllers/*"
      ],
      "#models/*": [
        "./app/models/*"
      ],
      "#validators/*": [
        "./app/validators/*"
      ],
      "#start/*": [
        "./start/*"
      ],
      "#config/*": [
        "./config/*"
      ],
      "#middleware/*": [
        "./app/middleware/*"
      ]
    }
  }
}